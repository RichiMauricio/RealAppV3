<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    tools:context="com.example.mauricio.realappv3.MainActivity">

    <ImageView
        android:id="@+id/imgReal"
        android:layout_width="wrap_content"
        android:layout_height="293dp"
        android:src="@drawable/logoreal" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgReal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/nixieone"
        android:text="Welcome to the next reality..."
        android:textColor="@color/realGreen"
        android:textSize="24sp" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/nixieone"
        android:text="Your phone number is your real code"
        android:textColor="#d9d80a"
        android:textSize="16sp" />


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="154dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="11dp"
        android:layout_toLeftOf="@+id/etPhoneNumber"
        android:layout_toStartOf="@+id/etPhoneNumber"
        android:backgroundTint="#4dcc14"
        android:popupBackground="#000000"
        android:fontFamily="@font/nixieone"
        android:foregroundTint="@android:color/white"
        android:spinnerMode="dropdown" />

    <EditText
        android:id="@+id/etPhoneNumber"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignTop="@+id/spinner"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:backgroundTint="@color/realGreen"
        android:hint="type your phone"
        android:inputType="phone"
        android:scrollbarSize="20dp"
        android:textColor="#4dcc14"
        android:textColorHighlight="@color/realGreen"
        android:textColorHint="#A4A4A4"
        android:textCursorDrawable="@null" />


    <Button
        android:id="@+id/btnSiguiente"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:background="@drawable/nextbutton" />

</RelativeLayout>
