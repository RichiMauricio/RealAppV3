<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/realBlack"
    tools:context="com.example.mauricio.realappv3.CodePhoneActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:layout_weight="1"
        android:fontFamily="@font/abrilfatfaceregular"
        android:text="Your passport"
        android:textColor="#4dcc14"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/abrilfatfaceregular"
        android:text="to the next reallity..."
        android:textColor="@color/realGreen"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/nixieone"
        android:text="Your secret code is"
        android:textColor="@color/realYellow"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView3"
        android:fontFamily="@font/nixieone"
        android:text="in your smartphone"
        android:textColor="@color/realYellow"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/nixieone"
        android:text="Enter here"
        android:textColor="@color/realYellow"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/btnSiguiente"
        android:layout_alignStart="@+id/btnSiguiente"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="40dp"
        android:background="@drawable/codeinput">


        <EditText
            android:id="@+id/editText"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:ems="10"
            android:backgroundTint="@color/realGreen"
            android:textColorHighlight="@color/realGreen"
            android:inputType="number"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:backgroundTint="@color/realGreen"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/editText"
            android:layout_toRightOf="@+id/editText"
            android:ems="10"
            android:textColorHighlight="@color/realGreen"
            android:inputType="number"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/editText2"
            android:layout_toRightOf="@+id/editText2"
            android:backgroundTint="@color/realGreen"
            android:ems="10"
            android:textColorHighlight="@color/realGreen"
            android:inputType="number"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/editText3"
            android:layout_toRightOf="@+id/editText3"
            android:backgroundTint="@color/realGreen"
            android:ems="10"
            android:textColorHighlight="@color/realGreen"
            android:inputType="number"
            android:textSize="16sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnSiguiente"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:background="@drawable/nextbutton" />

</RelativeLayout>
